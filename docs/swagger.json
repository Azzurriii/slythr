{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "This is a server for Slyther Go Backend.",
        "title": "Slyther Go Backend API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/contracts/{address}": {
            "get": {
                "description": "Get a cached smart contract from the database by its address and network",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "contracts"
                ],
                "summary": "Get contract from database",
                "parameters": [
                    {
                        "maxLength": 42,
                        "minLength": 42,
                        "type": "string",
                        "description": "Contract Address",
                        "name": "address",
                        "in": "path",
                        "required": true
                    },
                    {
                        "enum": [
                            "ethereum",
                            "polygon",
                            "bsc",
                            "base",
                            "arbitrum",
                            "avalanche",
                            "optimism",
                            "gnosis",
                            "fantom",
                            "celo"
                        ],
                        "type": "string",
                        "default": "ethereum",
                        "description": "Network Name",
                        "name": "network",
                        "in": "query"
                    }
                ],
                "responses": {}
            }
        },
        "/contracts/{address}/source-code": {
            "get": {
                "description": "Get the source code of a smart contract from Etherscan by its address and save it to the database",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "contracts"
                ],
                "summary": "Fetch contract source code",
                "parameters": [
                    {
                        "maxLength": 42,
                        "minLength": 42,
                        "type": "string",
                        "description": "Contract Address",
                        "name": "address",
                        "in": "path",
                        "required": true
                    },
                    {
                        "enum": [
                            "ethereum",
                            "polygon",
                            "bsc",
                            "base",
                            "arbitrum",
                            "avalanche",
                            "optimism",
                            "gnosis",
                            "fantom",
                            "celo"
                        ],
                        "type": "string",
                        "default": "ethereum",
                        "description": "Network Name",
                        "name": "network",
                        "in": "query"
                    }
                ],
                "responses": {}
            }
        },
        "/static-analysis": {
            "post": {
                "description": "Performs static security analysis on Solidity source code using Slither",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "static-analysis"
                ],
                "summary": "Analyze Solidity contract for security vulnerabilities",
                "parameters": [
                    {
                        "description": "Contract source code",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/static_analysis.AnalyzeRequest"
                        }
                    }
                ],
                "responses": {}
            }
        }
    },
    "definitions": {
        "static_analysis.AnalyzeRequest": {
            "type": "object",
            "required": [
                "source"
            ],
            "properties": {
                "source": {
                    "type": "string",
                    "minLength": 1
                }
            }
        }
    }
}